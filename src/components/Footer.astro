<style>
	footer {
		padding: 2.5em 1em;
		background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(59, 130, 246, 0.02) 100%);
		border-top: 1px solid rgba(0, 0, 0, 0.05);
		margin-top: 4rem;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.copyright {
		color: rgb(var(--gray));
		font-size: 0.9em;
		margin: 0;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--gray));
		transition: all 0.3s ease;
		padding: 0.5rem;
		border-radius: 50%;
		background: rgba(0, 0, 0, 0.02);
	}

	.social-link:hover {
		color: #2563eb;
		background: rgba(37, 99, 235, 0.1);
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.copyright {
			font-size: 0.85em;
		}
	}
</style>
