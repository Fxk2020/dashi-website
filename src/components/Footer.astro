---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<p class="copyright">&copy; {today.getFullYear()} Dashi Blog. All rights reserved.</p>
		<div class="social-links">
			<a href="https://github.com/Fxk2020" target="_blank" title="GitHub" class="social-link">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					/>
				</svg>
			</a>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2.5em 1em;
		background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(59, 130, 246, 0.02) 100%);
		border-top: 1px solid rgba(0, 0, 0, 0.05);
		margin-top: 4rem;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.copyright {
		color: rgb(var(--gray));
		font-size: 0.9em;
		margin: 0;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--gray));
		transition: all 0.3s ease;
		padding: 0.5rem;
		border-radius: 50%;
		background: rgba(0, 0, 0, 0.02);
	}

	.social-link:hover {
		color: #2563eb;
		background: rgba(37, 99, 235, 0.1);
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.copyright {
			font-size: 0.85em;
		}
	}
</style>
