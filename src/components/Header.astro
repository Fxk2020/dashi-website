---
import { Image } from 'astro:assets';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemePicker from './ThemePicker.astro';
import logoImage from '../assets/logo.png';
import zhihuLogo from '../assets/知乎.svg';
import csdnLogo from '../assets/csdn.svg';
---

<header>
	<nav>
		<h2>
			<a href="/" class="logo-link">
				<Image src={logoImage} alt="Logo" width={36} height={36} class="logo-image" />
				<span>{SITE_TITLE}</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blogs</HeaderLink>
			<HeaderLink href="/books">Books</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/gallery">Gallery</HeaderLink>
		</div>
		<div class="nav-controls">
			<div class="social-links">
				<a href="https://github.com/Fxk2020" target="_blank" title="GitHub" class="social-link">
					<span class="sr-only">GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
				
				<a href="https://blog.csdn.net/joey_ro" target="_blank" title="CSDN" class="social-link">
					<span class="sr-only">CSDN</span>
					<Image src={csdnLogo} alt="CSDN" width={20} height={20} class="social-icon" />
				</a>
				
				<a href="https://www.zhihu.com/people/ye-lu-da-shi-18-50" target="_blank" title="知乎" class="social-link">
					<span class="sr-only">知乎</span>
					<Image src={zhihuLogo} alt="知乎" width={20} height={20} class="social-icon" />
				</a>
			</div>
			<ThemePicker />
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.5em 1.5em;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		box-shadow: 0 1px 3px rgba(var(--black), 3%);
		border-bottom: 1px solid rgb(var(--gray-light));
		position: sticky;
		top: 0;
		z-index: 100;
		transition: background 0.3s ease;
	}

	:global([data-theme="dark"]) header {
		background: rgba(55, 65, 81, 0.95) !important;
	}

	:global([data-theme="blue"]) header {
		background: rgba(235, 248, 255, 0.95) !important;
	}

	:global([data-theme="green"]) header {
		background: rgba(240, 255, 244, 0.95) !important;
	}

	:global([data-theme="purple"]) header {
		background: rgba(250, 245, 255, 0.95) !important;
	}
	
	h2 {
		margin: 0;
		font-size: 0.9em;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1400px;
		margin: 0 auto;
	}

	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		color: rgb(var(--black));
		font-weight: 600;
		font-size: 0.9em;
		letter-spacing: -0.01em;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.logo-link:hover {
		color: #2563eb;
	}

	.logo-link:hover .logo-image {
		transform: rotate(360deg) scale(1.05);
		box-shadow: 0 0 12px rgba(37, 99, 235, 0.35);
	}

	.logo-image {
		border-radius: 50%;
		transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 0 8px rgba(37, 99, 235, 0.2);
		object-fit: cover;
		background: transparent;
	}

	h2 a.active {
		text-decoration: none;
	}

	.internal-links {
		display: flex;
		gap: 0.1rem;
		font-size: 0.85em;
	}

	nav a {
		padding: 0.75em 0.6em;
		color: var(--black);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.2s ease;
		font-weight: 500;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: #2563eb;
	}

	nav a:hover {
		color: #2563eb;
	}

	.nav-controls {
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.4rem;
		padding-right: 0.5rem;
		border-right: 1px solid rgb(var(--gray-light));
		margin-right: 0.2rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--black));
		transition: all 0.3s ease;
		padding: 0.3rem;
		border-radius: 50%;
	}

	.social-link:hover {
		color: #2563eb;
		background: rgba(37, 99, 235, 0.08);
		transform: scale(1.05);
	}

	.social-icon {
		display: block;
		transition: all 0.3s ease;
	}

	.social-link:hover .social-icon {
		transform: scale(1.1);
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
		}

	@media (max-width: 768px) {
		header {
			padding: 0.5em 1em;
		}

		nav {
			flex-wrap: wrap;
		}

		.internal-links {
			order: 2;
			width: 100%;
			justify-content: center;
			padding-top: 0.5em;
		}

		.nav-controls {
			order: 3;
		}
	}

	@media (max-width: 480px) {
		h2 {
			font-size: 0.8em;
		}

		.logo-link {
			font-size: 0.8em;
			gap: 0.5rem;
		}

		.logo-image {
			width: 28px !important;
			height: 28px !important;
		}

		.internal-links {
			font-size: 0.8em;
		}

		nav a {
			padding: 0.6em 0.5em;
		}

		.social-links {
			gap: 0.3rem;
			padding-right: 0.4rem;
			margin-right: 0.2rem;
		}

		.social-link svg,
		.social-link .social-icon {
			width: 18px;
			height: 18px;
		}

		.nav-controls {
			gap: 0.4rem;
		}
	}
</style>
