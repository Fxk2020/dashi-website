---
import { getCollection, type CollectionEntry, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingAssistant from '../../components/FloatingAssistant.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('experience');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

type Props = CollectionEntry<'experience'>;

const post = Astro.props;
const { Content } = await render(post);
---

<!doctype html>
<html lang="zh">
	<head>
		<BaseHead title={`${post.data.title} - ${SITE_TITLE}`} description={post.data.description} />
		<style>
			.article-header {
				text-align: center;
				padding: 3rem 1rem 2rem;
				max-width: 800px;
				margin: 0 auto;
			}

			.category-tag {
				display: inline-block;
				padding: 0.4rem 1rem;
				background: linear-gradient(135deg, #2563eb 0%, #22c55e 100%);
				color: white;
				border-radius: 20px;
				font-size: 0.85rem;
				font-weight: 600;
				margin-bottom: 1.5rem;
			}

			.article-title {
				font-size: 2.5rem;
				font-weight: 800;
				line-height: 1.2;
				color: rgb(var(--black));
				margin-bottom: 1rem;
			}

			.article-description {
				font-size: 1.2rem;
				color: rgb(var(--gray-dark));
				line-height: 1.6;
				margin-bottom: 1.5rem;
			}

			.article-meta {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 1.5rem;
				flex-wrap: wrap;
				color: rgb(var(--gray));
				font-size: 0.95rem;
			}

			.meta-item {
				display: flex;
				align-items: center;
				gap: 0.4rem;
			}

			.tags {
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin-top: 1rem;
			}

			.tag {
				padding: 0.3rem 0.8rem;
				background: rgba(37, 99, 235, 0.08);
				color: #2563eb;
				border-radius: 6px;
				font-size: 0.85rem;
				font-weight: 500;
			}

			.divider {
				max-width: 800px;
				margin: 2rem auto;
				border: none;
				border-top: 2px solid rgb(var(--gray-light));
			}

			.article-content {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 1rem 4rem;
				font-size: 1.05rem;
				line-height: 1.8;
				color: rgb(var(--gray-dark));
			}

			.article-content :global(h2) {
				font-size: 1.8rem;
				font-weight: 700;
				margin-top: 2.5rem;
				margin-bottom: 1rem;
				color: rgb(var(--black));
			}

			.article-content :global(h3) {
				font-size: 1.4rem;
				font-weight: 600;
				margin-top: 2rem;
				margin-bottom: 0.8rem;
				color: rgb(var(--black));
			}

			.article-content :global(h4) {
				font-size: 1.2rem;
				font-weight: 600;
				margin-top: 1.5rem;
				margin-bottom: 0.6rem;
				color: rgb(var(--black));
			}

			.article-content :global(p) {
				margin-bottom: 1.2rem;
			}

			.article-content :global(ul),
			.article-content :global(ol) {
				margin-bottom: 1.5rem;
				padding-left: 2rem;
			}

			.article-content :global(li) {
				margin-bottom: 0.6rem;
			}

			.article-content :global(code) {
				background: rgb(var(--gray-light));
				padding: 0.2rem 0.5rem;
				border-radius: 4px;
				font-size: 0.9em;
				font-family: 'Courier New', monospace;
			}

			.article-content :global(pre) {
				background: rgb(var(--gray-light));
				padding: 1.5rem;
				border-radius: 8px;
				overflow-x: auto;
				margin-bottom: 1.5rem;
			}

			.article-content :global(pre code) {
				background: none;
				padding: 0;
			}

			.article-content :global(blockquote) {
				border-left: 4px solid var(--accent);
				padding-left: 1.5rem;
				margin: 1.5rem 0;
				color: rgb(var(--gray));
				font-style: italic;
			}

			.article-content :global(a) {
				color: var(--accent);
				text-decoration: underline;
			}

			.article-content :global(img) {
				max-width: 100%;
				border-radius: 8px;
				margin: 1.5rem 0;
			}

			.back-link {
				max-width: 800px;
				margin: 0 auto 2rem;
				padding: 0 1rem;
			}

			.back-link a {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: var(--accent);
				font-weight: 600;
				text-decoration: none;
				transition: transform 0.2s ease;
			}

			.back-link a:hover {
				transform: translateX(-4px);
			}

			@media (max-width: 768px) {
				.article-title {
					font-size: 2rem;
				}

				.article-description {
					font-size: 1rem;
				}

				.article-content {
					font-size: 1rem;
					padding: 0 1rem 3rem;
				}

				.article-content :global(h2) {
					font-size: 1.5rem;
				}

				.article-content :global(h3) {
					font-size: 1.3rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="back-link">
				<a href="/gallery">‚Üê ËøîÂõûÁîüÊ¥ª¬∑ÂàÜ‰∫´</a>
			</div>

			<article>
				<header class="article-header">
					{post.data.category && (
						<div class="category-tag">{post.data.category}</div>
					)}
					<h1 class="article-title">{post.data.title}</h1>
					<p class="article-description">{post.data.description}</p>
					
					<div class="article-meta">
						<span class="meta-item">
							üìÖ <FormattedDate date={post.data.pubDate} />
						</span>
						{post.data.updatedDate && (
							<span class="meta-item">
								üîÑ Êõ¥Êñ∞‰∫é <FormattedDate date={post.data.updatedDate} />
							</span>
						)}
					</div>

					{post.data.tags && post.data.tags.length > 0 && (
						<div class="tags">
							{post.data.tags.map((tag) => (
								<span class="tag">#{tag}</span>
							))}
						</div>
					)}
				</header>

				<hr class="divider" />

				<div class="article-content">
					<Content />
				</div>
			</article>
		</main>
		<Footer />
		<FloatingAssistant />
	</body>
</html>

